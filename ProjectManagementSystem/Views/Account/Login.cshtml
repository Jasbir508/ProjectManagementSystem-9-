@using ProjectManagementSystem.Models
@model LoginViewModel
@{

}
<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Purple Admin</title>
    <!-- plugins:css -->
    <link href="~/Content/Admin-Template-master/vendors/iconfonts/mdi/css/materialdesignicons.min.css.map" />
    <link rel="stylesheet" href="../../vendors/css/vendor.bundle.base.css">
    <link href="~/Content/Admin-Template-master/vendors/css/vendor.bundle.base.css" rel="stylesheet" />
    <!-- endinject -->
    <!-- plugin css for this page -->
    <!-- End plugin css for this page -->
    <!-- inject:css -->
    <link href="~/Content/Admin-Template-master/css/style.css" rel="stylesheet" />
    <!-- endinject -->
</head>
<body>
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="content-wrapper d-flex align-items-center auth">
                <div class="row w-100">
                    <div class="col-lg-4 mx-auto">
                        <div class="auth-form-light text-left p-5">
                            <div class="brand-logo" style="text-align:center">
                                <h4>Project Management System</h4>
                            </div>
                            
                            <h6 class="font-weight-light" style="text-align:center">Sign in</h6>
                            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new {  }))
                            {<form class="pt-3">
                                    @Html.AntiForgeryToken()
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    <div class="form-group">
                                     
                                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control",@placeholder="Email" })
                                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group">
                                        
                                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Password" })
                                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="mt-3">
                                      
                                            <input type="submit" value="Log in" class="btn btn-block btn-gradient-primary btn-lg font-weight-medium auth-form-btn" />
                                    </div>
                                    @Html.ActionLink("Regiser Here","Register","Account")
                                </form>
                            }
                         
                        </div>
                    </div>
                </div>
            </div>
            <!-- content-wrapper ends -->
        </div>
        <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <!-- plugins:js -->
    <script src="~/Content/Admin-Template-master/vendors/js/vendor.bundle.addons.js"></script>
    <script src="~/Content/Admin-Template-master/vendors/js/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- inject:js -->
    <script src="~/Content/Admin-Template-master/js/off-canvas.js"></script>
    <script src="~/Content/Admin-Template-master/js/misc.js"></script>
    <!-- endinject -->
</body>
</html>


